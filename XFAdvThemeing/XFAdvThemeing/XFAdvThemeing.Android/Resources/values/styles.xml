<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <color name="ListViewSelectedItemColor">#00000000</color>
  <color name="ListViewHighlightedItemColor">#00000000</color>

  <style name="MainBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#000000</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#000000</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#4dff40</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->

    <item name="windowActionModeOverlay">true</item>

    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>

    <!--ListView color styling-->
    <item name="@android:colorPressedHighlight">@color/ListViewSelectedItemColor</item>
    <item name="@android:colorLongPressedHighlight">@color/ListViewHighlightedItemColor</item>
    <item name="@android:colorFocusedHighlight">@color/ListViewSelectedItemColor</item>
    <item name="@android:colorActivatedHighlight">@color/ListViewSelectedItemColor</item>
    <item name="@android:activatedBackgroundIndicator">@color/ListViewSelectedItemColor</item>
  </style>

  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#FF4081</item>
  </style>
</resources>
