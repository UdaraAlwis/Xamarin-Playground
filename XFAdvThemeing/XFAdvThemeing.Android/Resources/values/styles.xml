<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from https://aka.ms/material-colors -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#212121</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#000000</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#484848</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    <item name="windowActionModeOverlay">true</item>

    <!-- Got it from here: https://forums.xamarin.com/discussion/170362/change-background-color-of-the-selected-list-item -->
    <item name="android:colorPressedHighlight">@color/colorListViewHighlighted</item>
    <item name="android:colorLongPressedHighlight">@color/colorListViewHighlighted</item>
    <item name="android:colorFocusedHighlight">@color/colorListViewHighlighted</item>
    <item name="android:colorActivatedHighlight">@color/colorListViewHighlighted</item>
    <item name="android:activatedBackgroundIndicator">@color/colorListViewHighlighted</item>
  </style>
</resources>