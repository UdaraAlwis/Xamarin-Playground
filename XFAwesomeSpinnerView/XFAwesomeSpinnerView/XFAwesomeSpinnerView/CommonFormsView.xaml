<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFAwesomeSpinnerView.CommonFormsView">
    <ContentView.Content>
        <StackLayout Padding="10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Label TextColor="Black" Text="This is a Forms view"  HorizontalOptions="FillAndExpand" HeightRequest="40" ></Label>
            <Entry Placeholder="Name" HorizontalOptions="FillAndExpand" HeightRequest="40" ></Entry>
            <Entry Placeholder="Age" HorizontalOptions="FillAndExpand" HeightRequest="40" ></Entry>
        </StackLayout>
    </ContentView.Content>
</ContentView>